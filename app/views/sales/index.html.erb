<% content_for(:title) { '統計情報' } -%>
<% today = Date.today -%>
<select-summary-month :year="<%= params[:year].presence || today.year %>" :month="<%= params[:month].presence || today.month %>"></select-summary-month>


<table class="ui blue celled structured table">
  <thead>
    <tr>
      <th rowspan="2">洗車場</th>
      <th colspan="3">売上台数</th>
      <th colspan="3">売上金額</th>
    </tr>
    <tr>
      <th>合計</th>
      <th>前年比（％）</th>
      <th>前月比（％）</th>
      <th>合計</th>
      <th>前年比（％）</th>
      <th>前月比（％）</th>
    </tr>
  </thead>
  <tbody>
    <% @summaries.each do |summary| -%>
    <tr>
      <td><%= summary.place.name %></td>
      <td><%= summary.sales_count&.to_s(:delimited) %></td>
      <td> - </td>
      <td> - </td>
      <td><%= summary.sales_amount&.to_s(:delimited) %></td>
      <td> - </td>
      <td> - </td>
    </tr>
    <% end -%>
  </tbody>
</table>

<% if @summaries.blank? %>
  データがありません
<% end %>
